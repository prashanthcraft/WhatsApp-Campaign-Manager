{
  "name": "whatsapp-campaign-manager",
  "version": "1.0.0",
  "description": "A service to manage WhatsApp marketing campaigns accessible via REST API with authentication.",
  "main": "dist/server.js",
  "scripts": {
    "prepack": "npm run build",
    "clean": "npx rimraf ./dist",
    "prebuild": "npm run clean && build-genie generate-file --filepath dist/build-info.json",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "NODE_ENV=development nodemon",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test mocha -r ts-node/register 'test/**/*.test.ts'",
    "dev:env": "NODE_ENV=development nodemon src/server.ts",
    "prod:env": "NODE_ENV=production node dist/server.js"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@service": "dist/services",
    "@utils": "dist/utils",
    "@db": "dist/db",
    "@api": "dist/api",
    "@middlewares": "dist/middlewares"
  },
  "keywords": [
    "WhatsApp",
    "Marketing",
    "API",
    "Node.js",
    "Express",
    "TypeScript"
  ],
  "author": "Prashanth.S<prashanth.ssa@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/prashanthcraft/whatsapp-campaign-manager/issues"
  },
  "homepage": "https://github.com/prashanthcraft/whatsapp-campaign-manager#readme",
  "dependencies": {
    "@aimingle/entity": "^1.0.8",
    "async_hooks": "^1.0.0",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "build-genie": "^1.0.2",
    "class-validator": "^0.14.1",
    "compose-middleware": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^12.7.0",
    "hashids": "^2.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "nanoid": "^3.3.7",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "path-to-regexp": "^8.2.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rest-api-errors": "^1.3.1",
    "typeorm": "^0.2.41",
    "typeorm-naming-strategies": "^4.1.0",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.17.13",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.31",
    "@types/passport-jwt": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.2.0",
    "eslint": "^7.20.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
