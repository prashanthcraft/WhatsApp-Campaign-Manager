<!-- views/partials/styles.handlebars -->
<!-- Common style for headers -->
{{#*inline "headerStyle"}}style="font-size: 24px; color: #333333; margin: 0;"{{/inline}}

<!-- Common style for subheaders -->
{{#*inline "subheaderStyle"}}style="font-size: 18px; color: #666666; margin: 10px 0 20px;"{{/inline}}

<!-- Common style for paragraph text -->
{{#*inline "paragraphStyle"}}style="font-size: 16px; color: #333333; line-height: 1.5; margin: 0 0 10px;"{{/inline}}

<!-- Common style for button links -->
{{#*inline "buttonStyle"}}style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: #ffffff;
text-decoration: none; border-radius: 4px; margin-top: 20px;"{{/inline}}

<!-- Common style for footer text -->
{{#*inline "footerTextStyle"}}style="text-align: center; font-size: 12px; color: #666666; padding: 20px;"{{/inline}}